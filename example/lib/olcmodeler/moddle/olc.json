{
  "name": "Space Modeler",
  "uri": "http://bptlab/schema/spaceModeler",
  "prefix": "space",
  "xml": {
    "tagAlias": "lowerCase"
  },
  "types": [

    {
      "name": "UserProperty",
      "properties": [
        {
          "name": "key",
          "isAttr": true,
          "type": "String"
        },
        {
          "name": "value",
          "isAttr": true,
          "type": "String"
        }
      ]
    },

    {
      "name": "SpaceElement",
      "isAbstract": true,
      "properties": [
        {
          "name": "userProperties",
          "type": "UserProperty",
          "isMany": true
        },
        {
          "name": "name",
          "isAttr": true,
          "type": "String"
        },
        {
          "name": "id",
          "isAttr": true,
          "type": "String",
          "isId": true
        },
        {
          "name": "assignment",
          "isMany": true,
          "isAttr": true,
          "type": "String"
        }
      ]
    },
    {
      "name": "Place",
      "superClass": [
        "SpaceElement"
      ],
      "properties": [
        {
          "name": "lux",
          "isAttr": true,
          "type": "String"
        },
        {
          "name": "temperature",
          "isAttr": true,
          "type": "Integer"
        },
        {
          "name": "alarm",
          "isAttr": true,
          "type": "String"
        }
      ]
    },
    {
      "name": "Transition",
      "superClass": [
        "SpaceElement"
      ],
      "properties": [
        {
          "name": "sourcePlace",
          "isAttr": true,
          "isReference": true,
          "type": "Place"
        },
        {
          "name": "targetPlace",
          "isAttr": true,
          "isReference": true,
          "type": "Place"
        },
        {
          "name": "distance",
          "isAttr": true,
          "type": "Integer"
        },
        {
          "name": "slope",
          "isAttr": true,
          "type": "Integer"
        },
        {
          "name": "priority",
          "isAttr": true,
          "type": "Integer"
        },
        {
          "name": "condition",
          "isAttr": true,
          "type": "String"
        }
      ]
    },
    {
      "name": "Space",
      "superClass": [
        "SpaceElement"
      ],
      "properties": [
        {
          "name": "Elements",
          "isMany": true,
          "type": "SpaceElement"
        }
      ]
    },
    {
      "name": "Definitions",
      "superClass": [
        "SpaceElement"
      ],
      "properties": [
        {
          "name": "targetNamespace",
          "isAttr": true,
          "type": "String"
        },
        {
          "name": "expressionLanguage",
          "default": "http://www.w3.org/1999/XPath",
          "isAttr": true,
          "type": "String"
        },
        {
          "name": "typeLanguage",
          "default": "http://www.w3.org/2001/XMLSchema",
          "isAttr": true,
          "type": "String"
        },
        {
          "name": "places",
          "type": "Space"
        },
        {
          "name": "exporter",
          "isAttr": true,
          "type": "String"
        },
        {
          "name": "exporterVersion",
          "isAttr": true,
          "type": "String"
        }
      ]
    }
  ]
}

